    <select id="selectFunsCount" resultType="java.lang.Long">
  	SELECT
	COUNT(yfuns.follow_id)
	FROM
	yssp_follow yfuns
	INNER JOIN
	qy_user qu ON qu.ID = yfuns.follow_to_people
	WHERE 
	yfuns.follow_concerned_people =#{userId}
  </select>
  
  <select id="queryFollowInfoById" resultMap="theYsspFollowUserInfo">
  	select 
	f.*,
	u.*,
	n.*,
	fw.follow_id AS funsId
	FROM 
	yssp_follow f 
	INNER JOIN qy_user u ON follow_concerned_people = u.ID 
	LEFT JOIN yssp_user_real_name n ON u.ID = n.real_name_userId 
	LEFT JOIN yssp_follow fw ON fw.follow_concerned_people =f.follow_to_people 
	AND fw.follow_to_people =f.follow_concerned_people
	WHERE
	f.follow_to_people = #{userId} 
	AND 
	f.follow_status =1
	<if test="username != null and username != ''" >
      and u.wxName like "%${username}%"
    </if>
      order by f.follow_created_time desc
  </select>
  
  
